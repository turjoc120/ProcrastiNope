{
    "manifest_version": 3,
    "name": "ProcrastiNope",
    "version": "1.0",
    "description": "Block distracting sites during hackathons and stay focused!",
    "permissions": [
        "storage",
        "alarms",
        "webNavigation",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/icons/icon16.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "motivational-popup.html"
            ],
            "matches": [
                "https://*/*",
                "http://*/*"
            ]
        }
    ]
}